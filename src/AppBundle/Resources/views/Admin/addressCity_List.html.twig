{# EXTENDEMOS LA PLANTILLA 'AppBundle:Layouts:layout.html.twig'...................... #}
	{% extends "AppBundle:Layouts:layout.html.twig"%}
{# ......................EXTENDEMOS LA PLANTILLA 'AppBundle:Layouts:layout.html.twig' #}
{# INCLUIMOS EL JAVASCRIPT QUE VERIFICA SI EL NICK EXISTE............................ #}
{% block javascripts %}
	{# la función parent() carga todo el contenido del bloque anterior #}
	{{ parent() }}
{% endblock %}
{% block content %}
<!-- page content -->
	<div class="right_col" role="main">
		<div class="clearfix"></div>
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="x_panel" >
					<div class="x_title">
						<h3 style="display:inline-block;">Listado de Ciudades</h3>
					</div>
					<div class="x_content">
						<table  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
							<thead>
								<tr>
									<th style="text-align: center;">Cp</th>
									<th>Ciudad</th>
									<th>Provincia</th>
									<th>CCAA</th>
									<th>Editar</th>
								</tr>
							</thead>
							<tbody>
								{% for addressCity in addressCityPagination %}
									<tr>
										<td style="text-align: center;">{{addressCity.cp}}</td>
										<td>{{addressCity.city}}</td>
										<td>{{addressCity.idAddressProvince.province}}</td>
										<td>{{addressCity.idAddressProvince.idAddressCcaa.ccaa}}</td>
										<td style ="width:60px;"><a class="btn btn-success"><i class="fa fa-edit m-right-xs"></i> Editar</a></td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						{# PAGINACIÓN DE LOS USUARIOS................................................. #}
							<div class="navigation">
								{{ knp_pagination_render(addressCityPagination) }}
							</div>
						{# .................................................PAGINACIÓN DE LOS USUARIOS #}
					</div>
				</div>
			</div>
		</div>
	</div>
<!-- /page content -->
{% endblock %}